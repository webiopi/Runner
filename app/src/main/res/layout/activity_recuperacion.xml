<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recuperacion"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title"
        android:textSize="24sp"
        android:textStyle="italic"
        android:translationY="10sp" />

    <EditText
        android:id="@+id/EtCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textEmailAddress"
        android:translationY="100sp" />

    <Button
        android:id="@+id/btnRestab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reestablecer"
        android:translationY="270sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:translationY="300sp"
        app:srcCompat="@drawable/user" />

    <Button
        android:id="@+id/Inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesion"
        android:translationY="2sp" />

</LinearLayout>